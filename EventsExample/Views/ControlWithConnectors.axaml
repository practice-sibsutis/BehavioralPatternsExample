<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:EventsExample.Views">
  <Design.PreviewWith>
    <controls:ControlWithConnectors />
  </Design.PreviewWith>

  <Style Selector="controls|ControlWithConnectors">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
		  <Canvas Name="ControlWithConnector" Height="110" Width="110" Background="Transparent">
			  <Rectangle Height="100" Width="100" Stroke="Black" StrokeThickness="2">
				  <Rectangle.RenderTransform>
					  <TranslateTransform X="5" Y="5"/>
				  </Rectangle.RenderTransform>
			  </Rectangle>

			  <Ellipse Width="10" Height="10" Fill="DarkGreen">
				  <Ellipse.RenderTransform>
					  <TranslateTransform X="2.5" Y="49"/>
				  </Ellipse.RenderTransform>
			  </Ellipse>

			  <Ellipse Width="10" Height="10" Fill="DarkGreen">
				  <Ellipse.RenderTransform>
					  <TranslateTransform X="100" Y="49"/>
				  </Ellipse.RenderTransform>
			  </Ellipse>

			  <Ellipse Width="10" Height="10" Fill="DarkGreen">
				  <Ellipse.RenderTransform>
					  <TranslateTransform X="49" Y="2.5"/>
				  </Ellipse.RenderTransform>
			  </Ellipse>

			  <Ellipse Width="10" Height="10" Fill="DarkGreen">
				  <Ellipse.RenderTransform>
					  <TranslateTransform X="49" Y="99"/>
				  </Ellipse.RenderTransform>
			  </Ellipse>
		  </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
